<div class="mt-5">
    <h3 class="text-center">Tạo game mới</h3>
    <div class="mx-auto" style="width: 70%">
        <form method="POST" action="/games/store">
            <div class="mb-3">
                <label for="name" class="form-label">Tên game: </label>
                <input type="text" name="name" class="form-control" placeholder="Nhập tên game">
            </div>
            <div class="mb-3">
                <label for="type" class="form-label">Loại game:</label>
                <input type="text" name="type" class="form-control" placeholder=" Nhập loại game">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Link ảnh:</label>
                <input type="text" name="image" class="form-control" placeholder="Nhập Link ảnh">
            </div>
            <div class="mb-3">
                <label for="video" class="form-label">Link video:</label>
                <input type="text" name="video" class="form-control" placeholder="Nhập link video">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>