<div class="mt-5">
    <h3 class="text-center">Chỉnh sửa thông tin game</h3>
    <div class="mx-auto" style="width: 70%">
        <form method="POST" action="/games/{{game._id}}?_method=PUT">
            <div class="mb-3">
                <label for="name" class="form-label">Tên game: </label>
                <input type="text" name="name" value="{{game.name}}" class="form-control" placeholder="Nhập tên game">
            </div>
            <div class="mb-3">
                <label for="type" class="form-label">Loại game:</label>
                <input type="text" name="type" value="{{game.type}}" class="form-control" placeholder=" Nhập loại game">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Link ảnh:</label>
                <input type="text" name="image" value="{{game.image}}" class="form-control" placeholder="Nhập Link ảnh">
            </div>
            <div class="mb-3">
                <label for="video" class="form-label">Link video:</label>
                <input type="text" name="video" value="{{game.video}}" class="form-control" placeholder="Nhập link video">
            </div>
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </form>
    </div>
</div>